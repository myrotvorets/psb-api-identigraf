{
  "parserOptions": {
    "project": ["./tsconfig.json"],
    "sourceType": "module"
  },
  "extends": [
    "@myrotvorets/myrotvorets-ts",
    "plugin:mocha/recommended"
  ],
  "rules": {
    "@typescript-eslint/no-confusing-void-expression": ["error", { "ignoreArrowShorthand": true }]
  },
  "root": true,
  "env": {
    "es2022": true,
    "mocha": true,
    "node": true
  }
}
